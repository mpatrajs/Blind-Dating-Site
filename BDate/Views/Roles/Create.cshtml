@model Role

@{
    ViewData["Title"] = "Create a new role";
}

<form asp-action="Create">
    <div class="container-lg">
        <div class="row justify-content-lg-center">
            <div class="col-lg-6 text-center">
                <h3>Create new role</h3>
            </div>
        </div>
        <div class="row justify-content-lg-center mt-4">
            <div class="col-lg-5 mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="RoleName" class="control-label col-lg-4 col-form-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="RoleName" class="form-control" />
                    </div>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row justify-content-lg-center mt-4">
            <div class="col-lg-1 d-flex justify-content-center w-100">
                <input type="submit" value="Create Role" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>